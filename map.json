{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Suicide Cases (2005-2015)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/kongpuifun/3179/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "params": [
    {
      "name": "Year_above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 2005,
          "max": 2015,
          "step": 1,
          "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kongpuifun/3179/main/master.csv"
        },
        "key": "country",
        "fields": ["suicides_no"]
      },
    },
    {"calculate": "datum.suicides_no + 5", "as": "Suicide Cases"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Suicide Cases",
      "type": "quantitative",
      "scale": {"type": "log","scheme":"Reds"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "country"},
      {"field": "suicides_no", "type": "quantitative"}
    ]
  }
}
